<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Choose a Room</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/rooms.css" rel="stylesheet">
</head>
<body>
    <%- include('navbar')
    <div class="container">
        <h2 class="p-3">Choose a Room</h2>

        <% if (rooms.length === 0) { %>
            <p class="text-danger">No rooms available.</p>
        <% } else { %>
            <div class="list-group">
                <% rooms.forEach(function(room) { %>
                    <div class="row align-items-center px-3 py-1 w-100">
                        <span class="col py-1 <%= room.Users && room.Users.filter(user => user.id == 1).length > 0 ? 'bg-warning' : 'bg-info' %>">
                            Room for <%= room.Capacity %> people
                            <span class="right">Daily cost: <%= room.PricePerDay %></span>
                        </span>
                        <div class="col-6 d-flex justify-content-end">
                            <button onclick="makeReservation(1, '<%= room.id %>', '/rooms/reservation')" class="btn btn-secondary mx-1">Rent a room</button>
                        </div>
                        <!-- Add Hotel Details link after the "Rent a room" button -->
                        <a href="/hotels/<%= room.Hotel.id %>" class="col btn btn-secondary">Hotel Details</a>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
    <script src="/javascripts/makeReservation.js"></script>
</body>
</html>







